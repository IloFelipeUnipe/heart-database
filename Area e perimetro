#include <stdio.h>


int main ()
{
  int opcao = 0;
  printf ("Digite 1 para 2D, 2 para 3D");
  scanf ("%d", &opcao);

  if (opcao == 1)
    {
      int forma = 0;
      printf
	("Digite o formato desejado \n 1.Quadrado \n 2.Retangulo \n 3.Circulo \n 4.Triangulo \n 5.Trapezio \n 6.Losango  ");
      scanf ("%d", &forma);
      if (forma == 1)
	{
	  int lado = 0;
	  printf ("Digite o tamanho do lado do quadrado");
	  scanf ("%d", &lado);
	  int area = lado * lado;
	  int perimetro = lado * 4;
	  printf ("Area: %d , Perimetro: %d", area, perimetro);
	}
      if (forma == 2)
	{
	  int base = 0;
	  int alt = 0;
	  printf ("Digite o tamanho do base do retangulo");
	  scanf ("%d", &base);
	  printf ("Digite o tamanho da altura do retangulo");
	  scanf ("%d", &alt);
	  int area = base * alt;
	  int perimetro = base * 2 + alt * 2;
	  printf ("Area: %d , Perimetro: %d", area, perimetro);
	}
      if (forma == 3)
	{
	  int raio = 0;
	  printf ("Digite o tamanho do raio do circulo");
	  scanf ("%d", &raio);
	  int area = raio * raio * 3;
	  int perimetro = raio * 2 * 3;
	  printf ("Area:aprox %d , Perimetro:aprox %d", area, perimetro);
	}
      if (forma == 4)
	{
	  int base = 0;
	  int alt = 0;
	  int face1;
	  int face2;
	  int face3;
	  printf ("Digite o tamanho da base do triangulo");
	  scanf ("%d", &base);
	  printf ("Digite o tamanho da altura do triangulo");
	  scanf ("%d", &alt);
	  printf ("Digite o tamanho da face 1 do triangulo");
	  scanf ("%d", &face1);
	  printf ("Digite o tamanho da face 2 do triangulo");
	  scanf ("%d", &face2);
	  printf ("Digite o tamanho da face 3 do triangulo");
	  scanf ("%d", &face3);

	  int area = (base * alt) / 2;
	  int perimetro = face1 + face2 + face3;
	  printf ("Area: %d , Perimetro: %d", area, perimetro);
	}
      if (forma == 5)
	{
	  int basemaior = 0;
	  int basemenor = 0;
	  int alt = 0;
	  int lado1;
	  int lado2;
	  int lado3;
	  int lado4;
	  printf ("Digite o tamanho da base maior");
	  scanf ("%d", &basemaior);
	  printf ("Digite o tamanho da base menor");
	  scanf ("%d", &basemenor);
	  printf ("Digite a altura");
	  scanf ("%d", &alt);
	  printf ("Digite o tamanho da face 1");
	  scanf ("%d", &lado1);
	  printf ("Digite o tamanho da face 2");
	  scanf ("%d", &lado2);
	  printf ("Digite o tamanho da face 3");
	  scanf ("%d", &lado3);
	  printf ("Digite o tamanho da face 4");
	  scanf ("%d", &lado4);

	  int area = ((basemaior * basemenor) * alt) / 2;
	  int perimetro = lado1 + lado2 + lado3 + lado4;
	  printf ("Area: %d , Perimetro: %d", area, perimetro);
	}
      if (forma == 6)
	{
	  int diag1 = 0;
	  int diag2 = 0;
	  int lado1;
	  int lado2;
	  int lado3;
	  int lado4;
	  printf ("Digite o tamanho da diagonal 1");
	  scanf ("%d", &diag1);
	  printf ("Digite o tamanho da diagonal 2");
	  scanf ("%d", &diag2);
	  printf ("Digite o tamanho do lado 1");
	  scanf ("%d", &lado1);
	  printf ("Digite o tamanho do lado 2");
	  scanf ("%d", &lado2);
	  printf ("Digite o tamanho do lado 3");
	  scanf ("%d", &lado3);
	  printf ("Digite o tamanho do lado 4");
	  scanf ("%d", &lado4);
	  int area = (diag1 * diag2) / 2;
	  int perimetro = lado1 + lado2 + lado3 + lado4;
	  printf ("Area: %d , Perimetro: %d", area, perimetro);
	}

    }

  if (opcao == 2)
    {
      int forma = 0;
      printf("Digite o formato desejado \n 1.cubo \n 2.esfera \n 3.piramide \n 4.cilindro \n 5.cone ");
      scanf ("%d", &forma);
    if (forma == 1){
	  int aresta = 0;
	  printf ("Digite o tamanho da aresta");
	  scanf ("%d", &aresta);
	  int volume = aresta*aresta*aresta;
	  printf ("Volume: %d cm3", volume);
	}
	if (forma == 2){
	  int raio = 0;
	  printf ("Digite o tamanho do raio");
	  scanf ("%d", &raio);
	  int volume = (4*3*(raio*raio*raio))/3;
	  printf ("Volume: aprox %d cm3", volume);
	}
	if (forma == 3){
	  int areabase = 0;
	  int alt = 0;
	  printf ("Digite o tamanho da area da base");
	  scanf ("%d", &areabase);
	  printf ("Digite o tamanho da altura");
	  scanf ("%d", &alt);
	  int volume = (areabase*alt)/3;
	  printf ("Volume: %d cm3", volume);
	}
	if (forma == 4){
	  int areabase = 0;
	  int alt = 0;
	  printf ("Digite o tamanho da area da base");
	  scanf ("%d", &areabase);
	  printf ("Digite o tamanho da altura");
	  scanf ("%d", &alt);
	  int volume = (areabase*alt);
	  printf ("Volume: %d cm3", volume);
	}
	if (forma == 5){
	  int areabase = 0;
	  int alt = 0;
	  printf ("Digite o tamanho da area da base");
	  scanf ("%d", &areabase);
	  printf ("Digite o tamanho da altura");
	  scanf ("%d", &alt);
	  int volume = (areabase*alt)/3;
	  printf ("Volume: %d cm3", volume);
	}
	
      return 0;
    }
}
